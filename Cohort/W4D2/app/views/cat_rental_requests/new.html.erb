<h2>Cat Rental Request Form</h2>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_rental_request_cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_rental_request_id">
    <option disabled selected>-- select a cat--</option>
    <% Cat.all.each do |cat| %>
    <option value="<%= cat.id %>"> <%= cat.name %> </option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="start_date">Enter a start date:</label>
  <input type="date" id='start_date' name="cat_rental_request[start_date]" value= <%= @cat_rental_request.start_date %> ><br>
  <br>

  <label for="end_date">Enter an end date:</label>
  <input type="date" id='end_date' name="cat_rental_request[end_date]" value= <%= @cat_rental_request.end_date %> ><br>
  <br>

  <br><br>
  <input type="submit" value="Submit Rental">
</form>
